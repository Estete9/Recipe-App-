<div class="mx-auto" style="width: 50%;">
  <%= form_with(model: recipe) do |form| %>
    <% if recipe.errors.any? %>
      <div>
        <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

        <ul>
          <% recipe.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :preparation_time, class: "form-label" %>
      <%= form.text_field :preparation_time, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :cooking_time, class: "form-label" %>
      <%= form.text_field :cooking_time, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :public, class: "form-check-label" %>
      <%= form.check_box :public, class: "form-check-input" %>
    </div>

    <div class="mb-3">
      <%= form.submit 'Create Recipe', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

