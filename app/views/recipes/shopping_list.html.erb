<h1>Shopping List</h1>

<div style="display: flex; justify-content: space-between;">
  <div>
    <p><strong>Amount of Food to Buy:</strong> <%= @missing_foods.size %></p>
    <p><strong>Recipe:</strong> <%= @recipe.name %></p>
  </div>

  <div>
    <p><strong>Total Value of Food Needed:</strong> <%= @missing_foods.sum(&:price) %></p>
    <p><strong>Inventory:</strong> <%= @inventory.name %></p>
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% @missing_foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.quantity %></td>
        <td><%= food.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
