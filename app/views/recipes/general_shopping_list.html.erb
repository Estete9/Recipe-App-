<div style="width: 80vw; margin: 0 auto; text-align: center;">
  <h1 class="text-center mt-3 mb-5">General Shopping List</h1>

  <div style="display: flex; justify-content: space-between;">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div>
            <p><strong>Amount of Food to Buy:</strong> <%= @total_missing_foods %></p>
            <p><strong>Total Value of Food Needed:</strong> <%= @total_price %></p>
          </div>
        </div>
        <div class="col-md-6">
          <div>
            <p><strong>Recipe:</strong> All Recipes</p>
            <p><strong>Inventory:</strong> All Inventories</p>
          </div>
        </div>
      </div>
    </div>
  </div>


       <div class="mt-3 d-flex justify-content:center;">
          <table class="table text-center mt-3" style="width: 80vw; ">
            <thead>
              <tr>
                <th>Food</th>
                <th>Quantity</th>
                <th>Price</th>
              </tr>
            </thead>
            <% if @missing_foods.any? %>
              <tbody>
                <% @missing_foods.each do |item| %>
                  <tr>
                    <td><%= item[:food].name %></td>
                    <td><%= item[:quantity_difference] %></td>
                    <td><%= item[:price] %></td>
                  </tr>
                <% end %>
              </tbody>
            <% else %>
              <tr>
                <td colspan="3">Empty list for now</td>
              </tr>
            <% end %>
          </table>
          </div>

