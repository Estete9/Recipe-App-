<%= button_to "New Inventory", new_inventory_path, method: :get, class: "btn btn-primary" %>

<div id="inventories">
  <% @inventories.each do |inventory| %>
      <%= link_to inventory_path(inventory.id) do %>
    <%= render inventory %>
      <%if can? :destroy, inventory %>
      <%= link_to "Remove", inventory_path(inventory.id), data: { confirm: 'Are you sure?', turbo_method: :delete }, method: :delete %>
    <% end %>
    <% end %>
  <% end %>
</div>
